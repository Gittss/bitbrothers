<div class="main">
    <h3>{{title}}</h3>
    <a class="button" href="/api/users"><i class="fa fa-eye"></i> View all Users</a>
    <form class="new" action="/api/users" method="POST">
        <input type="hidden" name="_id" value="{{user._id}}">
        <label>Name</label>
        <input type="text" name="name" placeholder="enter name" value="{{user.name}}">
        <div style="color: red;">
            {{user.nameError}}
        </div>

        <label>Mobile</label>
        <input type="text" name="number" placeholder="enter mob. number" value="{{user.number}}">
        <div style="color: red;">
            {{user.numberError}}
        </div>

        <div>
            <button type="submit" class="button"><i class="fa fa-check"></i> Submit</button>
        </div>
    </form>
</div>